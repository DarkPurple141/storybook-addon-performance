{
  "compileOnSave": true,
  "compilerOptions": {
    "outDir": "dist",
    "target": "ES2019",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "react",
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "types": ["gzip-js", "jest", "react", "react-dom"]
  },
  "include": ["src/**/*"]
}
